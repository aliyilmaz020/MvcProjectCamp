
@{
    ViewBag.Title = "AllHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
    string color = "";
    string colorStatus = "";
}

<title>Başlıklar</title>
<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <style>
        .pagination {
            display: flex;
            list-style: none;
            justify-content: center;
            padding: 0;
        }

            .pagination li {
                margin: 5px;
            }

                .pagination li a {
                    display: block;
                    padding: 8px 12px;
                    text-decoration: none;
                    color: #007bff;
                    border: 1px solid #ddd;
                    border-radius: 4px;
                    transition: background 0.3s;
                }

                    .pagination li a:hover {
                        background: #007bff;
                        color: white;
                    }

            .pagination .active a {
                background: #007bff;
                color: white;
                border: 1px solid #007bff;
            }
    </style>
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Başlıklar</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>

                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Başlık Adı
                            </th>
                            <th style="width: 30%">
                                Oluşturan Yazar
                            </th>
                            <th style="width: 8%" class="text-center">
                                Kategori
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            if (x.HeadingId % 2 == 0)
                            {
                                color = "badge badge-info";
                            }
                            else
                            {
                                color = "badge badge-secondary";
                            }
                            if (x.HeadingStatus == true)
                            {
                                colorStatus = "badge badge-success";
                            }
                            else
                            {
                                colorStatus = "badge badge-danger";
                            }
                            <tr>
                                <td>
                                    @x.HeadingId
                                </td>
                                <td>
                                    <a>
                                        @x.HeadingName
                                    </a>
                                    <br />
                                    <small>
                                        Oluşturulma Tarihi: @x.HeadingDate.ToShortDateString()
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            @x.Writer.WriterName @x.Writer.WriterSurname
                                        </li>
                                    </ul>
                                </td>
                                <td class="project-state">
                                    <span class="@color">@x.Category.CategoryName</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/Content/ContentByHeading/@x.HeadingId">
                                        <i class="fas fa-folder">
                                        </i>
                                        Yazılar
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/WriterContent/AddContent/@x.HeadingId">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Yorumla
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>
