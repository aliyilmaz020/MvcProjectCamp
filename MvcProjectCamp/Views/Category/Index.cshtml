@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<script src="~/Templates/webadmin/plugins/jquery/jquery.min.js"></script>

<title>Kategoriler</title>
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Başlıklar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@{count++;} @count</th>
                <td>@item.CategoryName</td>
                <td><a href="/Category/RemoveCategory/@item.CategoryId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Category/EditCategory/@item.CategoryId" class="btn btn-warning">Güncelle</a></td>
                <td><a href="/Category/Headings/@item.CategoryId" class="btn btn-dark">Başlıklar</a></td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-outline-primary" href="/Category/AddCategory">Yeni Kategori</a>

