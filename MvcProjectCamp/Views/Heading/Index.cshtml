@using PagedList
@using PagedList.Mvc
@model IPagedList<EntityLayer.Concrete.Heading>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
    string color = "";
}

<title>Başlıklar</title>
<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
<style>
    .pagination {
        display: flex;
        list-style: none;
        justify-content: center; 
        padding: 0;
    }

        .pagination li {
            margin: 5px;
        }

            .pagination li a {
                display: block;
                padding: 8px 12px;
                text-decoration: none;
                color: #007bff;
                border: 1px solid #ddd;
                border-radius: 4px;
                transition: background 0.3s;
            }

                .pagination li a:hover {
                    background: #007bff;
                    color: white;
                }

        .pagination .active a {
            background: #007bff;
            color: white;
            border: 1px solid #007bff;
        }
</style>
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Başlıklar</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <a href="/Heading/AddHeading" class="btn btn-primary">Başlık Ekle</a>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>

                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Başlık Adı
                            </th>
                            <th style="width: 30%">
                                Oluşturan Yazar
                            </th>
                            <th style="width: 8%" class="text-center">
                                Kategori
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            if (count % 2 == 0)
                            {
                                color = "badge badge-dark";
                            }
                            else
                            {
                                color = "badge badge-danger";
                            }
                            <tr>
                                <td>
                                    @{ count++;} @count
                                </td>
                                <td>
                                    <a>
                                        @x.HeadingName
                                    </a>
                                    <br />
                                    <small>
                                        Oluşturulma Tarihi: @x.HeadingDate.ToShortDateString()
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            @x.Writer.WriterName @x.Writer.WriterSurname
                                        </li>
                                    </ul>
                                </td>
                                <td class="project-state">
                                    <span class="@color">@x.Category.CategoryName</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="#">
                                        <i class="fas fa-folder">
                                        </i>
                                        Yazılar
                                    </a>
                                    <a class="btn btn-info btn-sm" href="#">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="#">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- /.card-body -->
        </div>
        @Html.PagedListPager(Model as IPagedList, page => Url.Action("Index", new { page }))
        <!-- /.card -->
    </section>
</body>
</html>
